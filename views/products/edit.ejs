<% layout('layouts/boilerplate') %>
<h1>Edit Product</h1>
<form action="/products/<%= product._id %>?_method=PATCH" method="POST">
    <input name="name" type="text" placeholder="<%= product.name %>" value="<%= product.name %>">
    <input name="price" type="text" class="price-input" placeholder="<%= product.price %>" value="<%= product.price %>">
    <select name="category" id="category">
        <% for (let cate of categoryList) { %>
            <option value="<%= cate %>" <%= product.category === cate ? 'selected' : '' %>><%= cate %></option>
        <% } %>
    </select>
    <button>Done</button>
</form>
<a href="/products/<%= product._id %>">Back</a>