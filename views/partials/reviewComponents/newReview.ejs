<div id="review-pop-up" class="d-none z-1 pop-up vw-100 vh-100 position-fixed top-50 start-0 d-flex justify-content-center align-items-center">
    <div class="row w-100">
        <form action="/products/<%= product._id %>/reviews" method="POST" class="relative card col-lg-6 offset-lg-3 text-center pt-4">
            <button type="button" id="close-create-review-pop-up" class="btn-close close-pop-up-icon" aria-label="Close"></button>
            <h2>Share Your Exprience!</h2>
            <div class="fs-1 my-3">
                <span class="fa fa-star ratingStar fa-star1"></span>
                <span class="fa fa-star ratingStar fa-star2"></span>
                <span class="fa fa-star ratingStar fa-star3"></span>
                <span class="fa fa-star ratingStar fa-star4"></span>
                <span class="fa fa-star ratingStar fa-star5"></span>
                <input id="rateInput" name="rate" type="text" class="d-none">
            </div>
            <textarea name="text" id="" placeholder="Write Information or Opinions That You Want to Share!" cols="50" rows="5" class="rounded p-2 mt-3 mb-5"></textarea>
            <button class="btn btn-info w-25 mx-auto mb-5">Submit</button>
        </form>
    </div>
</div>